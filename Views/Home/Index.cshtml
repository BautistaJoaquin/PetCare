@model IEnumerable<proyecto_mascotas.Models.ForumViewModel>

@{
    ViewData["Title"] = "Home Page";
}



@* Apartado de slider *@
<div class="bg-dark py-5">
    <div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active img-fluid">
                <img class="d-block w-100 img-fluid" src="~/img/adopcion-img.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>ADOPTA A UNA MASCOTA</h5>
                    <p>Ellos estan buscando un hogar y mucho cariño.</p>
                </div>
            </div>
            <div class="carousel-item img-fluid">
                <img class="d-block w-100 img-fluid" src="~/img/vacunacion-img.jpeg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>VACUNA A TU MASCOTA</h5>
                    <p>Piensa siempre en la salud de tu mascota.</p>
                </div>
            </div>
            <div class="carousel-item ">
                <img class="d-block w-100 img-fluid" src="~/img/veterinarios-img.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>CONSULTA VETERINARIA</h5>
                    <p>Encuentra los puntos de ubicación del centro veterinario mas cercano a tu hogar.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    </div>
</div>

@* Apartado de quienes somos *@
<div class="container my-4">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-6 text-center">
                    <h1 class="mb-4 font-weight-bold animated fadeInDown" data-scroll-animate="fadeInDown">¿Quienes Somos?</h1>
                    <p data-scroll-animate="fadeInUp" class="animated fadeInUp">
                        Somos una organizacion sin fines de lucro y en conjunto con otras, con la mision de asistir, contribuir a su salud y ayudar a los animales sin hogar a encontrar una familia que le brinden mucho cariño.
                    </p>
                    <div class="lana-hr lana-hr-4 border-primary animated zoomIn" data-scroll-animate="zoomIn"></div>
                </div>
            </div>
</div>

@* Servicios *@
<div id="our-services-container" class="container-fluid bg-dark text-white lana-bg-image-white-large-staring-cat-body-indoor section-py--large py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-6 text-center">
